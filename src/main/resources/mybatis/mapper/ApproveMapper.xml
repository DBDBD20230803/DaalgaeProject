<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.daalgae.daalgaeproject.payment.dao.ApproveMapper">

<resultMap id="approveResultMap" type="com.daalgae.daalgaeproject.payment.dto.KakaoApprove">
    <id property="partnerOrderId" column="partner_order_id"/>
    <result property="tid" column="tid"/>
    <result property="paymentMethodType" column="payment_method_type"/>
    <result property="createdAt" column="created_at"/>
</resultMap>

    <insert id="registKakaoPay" parameterType="com.daalgae.daalgaeproject.payment.dto.KakaoApprove">
        INSERT INTO GAEKKEOM (
                                PARTNER_ORDER_ID
                                ,TID
                                ,PAYMENT_METHOD_TYPE
                                ,CREATED_AT
                            )
        VALUES (
                #{ partnerOrderId }
                #{ tid }
                #{ paymentMethodType }
                #{ createdAt }
            )
    </insert>


</mapper>


