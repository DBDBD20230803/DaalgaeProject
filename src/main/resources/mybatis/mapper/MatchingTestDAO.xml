<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.daalgae.daalgaeproject.matchingTest.model.dao.MatchingTestDAO">
        <resultMap id="matchingTestMap" type="MatchingTestDTO">
            <id property="dogCode" column="DOG_CODE"/>
            <result property="dogKind" column="DOT_KIND"/>
            <result property="testResult" column="TEST_RESULT"/>
            <result property="selectedKind" column="SELECTED_KIND"/>
        </resultMap>
        <update id="testResult" parameterType="MatchingTestDTO">
            UPDATE
                PET_TEST
            SET
                SELECTED_KIND = #{selectedKind}

            WHERE DOG_KIND = #{dogKind}
        </update>

        <select id="getResult" resultMap="matchingTestMap">
            SELECT DOG_KIND, TEST_RESULT, SELECTED_KIND
            FROM PET_TEST
            WHERE DOG_KIND = #{selectedKind}
        </select>
</mapper>